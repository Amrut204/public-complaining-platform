<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile | Public Complaint Platform</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" href="/style.css">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
      padding: 40px 15px;
    }

    /* Profile card */
    .profile-card {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.08);
      padding: 25px;
      max-width: 300px;
      margin-bottom: 30px;
      text-align: center;
    }

    .profile-card h3, .profile-card h4 {
      color: #007bff;
      margin-bottom: 10px;
    }

    .profile-card p {
      font-size: 14px;
      color: #333;
      margin-bottom: 5px;
    }

    .divider {
      border-bottom: 1px solid #ddd;
      margin: 15px 0;
    }

    .profile-icon {
      font-size: 50px;
      color: #007bff;
      cursor: pointer;
      transition: transform 0.3s ease;
      margin-bottom: 15px;
    }

    .profile-icon:hover {
      transform: scale(1.1);
    }

    .btn-custom {
      border-radius: 10px;
      width: 100%;
      margin-top: 10px;
    }

    /* Complaints section */
    #comp {
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
    }

    .complaint-card {
      background: #fff;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .complaint-card div {
      margin-bottom: 5px;
    }

    .btn-resolve {
      border-radius: 8px;
      padding: 5px 12px;
      margin-top: 10px;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #343a40;
    }

    @media (max-width: 576px) {
      .profile-card, #comp {
        width: 95%;
      }
    }
  </style>
</head>
<body>

  <!-- Header -->
  <%- include("partials/header") %>

  <main class="container d-flex flex-column align-items-center">

    <% if(mainUser) { %>
      <!-- Profile Section -->
      <div class="profile-card">
        <i class="fa-solid fa-user-circle profile-icon" onclick="toggleProfile()"></i>

        <div id="profileDetails">
          <h3>Profile</h3>
          <p><strong>Username:</strong> <%= mainUser.username %></p>
          <p><strong>Email:</strong> <%= mainUser.email %></p>
          <p><strong>Mobile:</strong> <%= mainUser.mobile %></p>

          <div class="divider"></div>

          <h4>Address</h4>
          <p><strong>District:</strong> <%= mainUser.district %></p>
          <p><strong>Taluka:</strong> <%= mainUser.taluka %></p>
          <p><strong>Village:</strong> <%= mainUser.village %></p>
          <p><strong>Area Representative:</strong> <%= mainUser.role %></p>

          <form action="/edit/<%= mainUser.id %>">
            <button class="btn btn-primary btn-custom">Edit Your Profile</button>
          </form>
          <form action="/logout">
            <button class="btn btn-secondary btn-custom">Logout</button>
          </form>
        </div>
      </div>

      <!-- Complaints Section -->
      <h2>Complaints Received</h2>
      <div id="comp">
        <% if(mainUser.complaint && mainUser.complaint.length > 0) { %>
          <% mainUser.complaint.forEach(com => { %>
            <div class="complaint-card">
              <div><strong>Title:</strong> <%= com.title %></div>
              <div><strong>Description:</strong> <%= com.description %></div>
              <div><strong>From:</strong> <%= com.name %></div>
              <div><strong>Mobile:</strong> <%= com.mobile %></div>
              <div><strong>Email:</strong> <%= com.email %></div>

              <% if(com.resolved === "Yes") { %>
                <button class="btn btn-success btn-resolve" disabled>Resolved âœ…</button>
              <% } else { %>
                <form action="/resolved/<%= com.complainer_id %>" method="POST">
               <input type="hidden"  name="email" value="<%=com.email%>">
                <input type="hidden" name="desc" value="<%=com.description%>">
              
                  <button class="btn btn-warning btn-resolve">Resolve</button>
                </form>
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-center">No complaints received yet.</p>
        <% } %>
      </div>

    <% } else { %>
      <p class="text-center text-danger">User not logged in. Please <a href="/login">login</a>.</p>
    <% } %>

  </main>

  <!-- Footer -->
  <%- include("partials/footer") %>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function toggleProfile() {
      const profileDetails = document.getElementById("profileDetails");
      profileDetails.style.display = (profileDetails.style.display === "none" || profileDetails.style.display === "") ? "block" : "none";
    }

    document.querySelectorAll(".btn-resolve").forEach(button => {
      button.addEventListener("click", (event) => {
        const result = confirm("Are you sure?");
        if (!result) {
          event.preventDefault(); 
        } else {
          alert("Message sent to complainer");
        }
      });
    });
  </script>

</body>
</html>
