        function updateDistricts() {
            let districtSelect = document.getElementById("district");
            let talukaSelect = document.getElementById("taluka");

            districtSelect.innerHTML = "<option value=''>-- Select District --</option>";
            talukaSelect.innerHTML = "<option value=''>-- Select Taluka --</option>";
            talukaSelect.disabled = true;

            Object.keys(stateDistrictTalukas["Maharashtra"]).forEach(district => {
                let option = document.createElement("option");
                option.value = district;
                option.textContent = district;
                districtSelect.appendChild(option);
            });

            districtSelect.disabled = false;
        }

        function updateTalukas() {
            let districtSelect = document.getElementById("district");
            let talukaSelect = document.getElementById("taluka");

            let selectedDistrict = districtSelect.value;
            let talukas = stateDistrictTalukas["Maharashtra"]?.[selectedDistrict] || [];

            talukaSelect.innerHTML = "<option value=''>-- Select Taluka --</option>";

            talukas.forEach(taluka => {
                let option = document.createElement("option");
                option.value = taluka;
                option.textContent = taluka;
                talukaSelect.appendChild(option);
            });

            talukaSelect.disabled = talukas.length === 0;
        }

        function validateForm(event) {
            let districtSelect = document.getElementById("district");
            if (!districtSelect.value) {
                alert("Please select a district.");
                event.preventDefault(); // Prevent form submission
                return false;
            }
            return true;
        }

        window.onload = function () {
            updateDistricts();
        };
