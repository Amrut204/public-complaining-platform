        <h1>Signup</h1>
    
        <form action="/signup" method="POST" onsubmit="return validateForm(event)">
            <input id="username" type="text" placeholder="enter username" required name="username">
            <input id="email" type="email" placeholder="Email" required name="email">
            <input id="mobile" type="number" placeholder="mobile No" required name="mobile">
            <input id="password" type="password" placeholder="Password" required name="password">
    
