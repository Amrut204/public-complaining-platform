<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Header -->
  <nav class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="#">Admin Dashboard</a>
      <span class="text-white">Welcome, Admin</span>
    </div>
  </nav>

  <!-- Main Section -->
  <main class="container my-5">
    <h2 class="mb-4 border-start border-4 border-primary ps-3">Pending Representatives</h2>

    <ul class="list-unstyled">
      <% reps.forEach(rep => { %>
        <li class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= rep.username %></h5>
            <p class="card-text mb-2">
              <strong>Email:</strong> <%= rep.email %><br>
              <strong>Mobile:</strong> <%= rep.mobile %><br>
              <strong>Address:</strong> <%= rep.district %>, <%= rep.taluka %>, <%= rep.village %>
            </p>

            <div class="d-flex gap-2">
              <% if (rep.status === "pending") { %>
                <form action="/admin/approve/<%= rep.uniq %>" method="POST">
                  <button type="submit" class="btn btn-success btn-sm">Approve</button>
                </form>
                <form action="/admin/reject/<%= rep.uniq %>" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                </form>

              <% } else if (rep.status === "approved") { %>
                <button class="btn btn-success btn-sm" disabled>Approved ✅</button>
                <form action="/admin/reject/<%= rep.uniq %>" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                </form>

              <% } else if (rep.status === "rejected") { %>
                <form action="/admin/approve/<%= rep.uniq %>" method="POST">
                  <button type="submit" class="btn btn-success btn-sm">Approve</button>
                </form>
                <button class="btn btn-danger btn-sm" disabled>Rejected ❌</button>
              <% } %>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
