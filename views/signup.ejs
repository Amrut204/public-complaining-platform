                <option value="">-- Select District --</option>
            </select>
    
            <label for="taluka">Select Taluka:</label>
            <select id="taluka" name="taluka" disabled>
                <option value="">-- Select Taluka --</option>
            </select>
    
            <label for="village">Enter Village/Nagar:</label>
            <input type="text" id="village" name="village" placeholder="Enter village or nagar">
    
            <label for="role">Select Role:</label>
            <select id="role" name="role">
                <option name="civilian">Civilian</option>
                <option>Area Representative</option>
            </select>
    
            <button id="submit" type="submit">Sign Up</button>
        </form>
    
        <p class="switch">Already have an account? <a href="/">Login</a></p>
